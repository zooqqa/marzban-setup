# Marzban Configuration Example
# Copy this file to .env and modify the values

# Database Configuration (for MySQL)
SQLALCHEMY_DATABASE_URL="mysql+pymysql://marzban:password@127.0.0.1/marzban"
MYSQL_ROOT_PASSWORD=your_strong_root_password
MYSQL_DATABASE=marzban
MYSQL_USER=marzban
MYSQL_PASSWORD=your_strong_mysql_password

# For SQLite (default - simpler setup)
# SQLALCHEMY_DATABASE_URL="sqlite:////var/lib/marzban/marzban.db"

# Uvicorn Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_SSL_CERTFILE=""
UVICORN_SSL_KEYFILE=""

# Admin Configuration
SUDO_USERNAME=admin
SUDO_PASSWORD=your_admin_password

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration
CORS_ORIGINS="*"

# Webhook Configuration (optional)
WEBHOOK_ADDRESS=""
WEBHOOK_SECRET=""

# Subscription Configuration
SUBSCRIPTION_PAGE_TEMPLATE=""

# Telegram Bot (optional)
TELEGRAM_API_TOKEN=""
TELEGRAM_ADMIN_ID=""

# Custom App Title
APP_NAME="Marzban VPN Panel"

# Documentation
DOCS=false

# Debug Mode
DEBUG=false

# Multi-server Configuration
# NODE_URLS=["http://node1-ip:8000", "http://node2-ip:8000"]